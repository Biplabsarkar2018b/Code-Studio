#include <bits/stdc++.h> 
void pattern(int n)
{
    for(int i=0;i<=n;i++){
        int noOfGaps = n-i;
        while(noOfGaps--){
            cout<<" ";
        }
        int j = i+1;
        while(j--){
            cout<<j;
        }
        
        for(int h=1;h<=i;h++){
            cout<<h;
        }
        cout<<endl;
    }
}
